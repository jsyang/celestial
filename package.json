{
  "name": "celestialcombat",
  "version": "1.0.0",
  "description": "Top-down 2D space shooter -- galactic conquest and colonization",
  "author": {
    "name": "jsyang.ca@gmail.com",
    "url": "http://jsyang.ca/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/jsyang/celestial.git"
  },
  "main": "index.js",
  "scripts": {
    "ts-watch": "tsc --noEmit -w -p .",
    "generate-env": "node generateDotEnv.js",
    "watch": "yarn regen-sounds; yarn generate-env ; parcel _dev.html --port 3000 --no-hmr --no-source-maps",
    "bundle-js": "yarn regen-sounds; yarn generate-env ; NODE_ENV=production parcel build _dev.html --out-dir . ; yarn cleanup",
    "cleanup": "git checkout _dev.html ; mv client.*.js celestialcombat.js ; rm *.map *.ogg",
    "regen-sounds": "node generateSoundsList.js",
    "generate-how-to-play-page": "marked -o how-to-play/index.html < src/how-to-play.md",
    "build": "yarn bundle-js ; yarn generate-how-to-play-page"
  },
  "dependencies": {
    "@types/pixi.js": "^4.6.0",
    "@types/sat": "^0.0.30",
    "fast-memoize": "^2.5.1",
    "jszip": "^3.1.3",
    "jszip-utils": "^0.0.2",
    "marked": "^0.3.9",
    "parcel-bundler": "^1.10.3",
    "pixi.js": "^4.8.2",
    "sat": "^0.6.0",
    "typescript": "^3.2.1"
  }
}
