{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    // Use strict for future-proofing and performance benefits
    // http://stackoverflow.com/a/31395185
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "es2017.object",
      "es6",
      "es7",
      "dom"
    ],
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "src/client/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}